<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<insert id="create" parameterType="hashMap">
		INSERT INTO
		board(board_title,board_contents,board_reg_date,board_upd_date)
		VALUES(#{board_title},#{board_contents},now(),now())
	</insert>

	<select id="listAll" parameterType="hashMap"
		resultType="BoardVO">
		select * from board
		<!-- <if test="search != null and search != '' "> WHERE board_title LIKE 
			CONCAT('%',#{search},'%') or board_contents LIKE CONCAT('%',#{search},'%') 
			</if> -->
	</select>
	<select id="listBySeq" parameterType="String"
		resultType="BoardVO">
		select * from board where board_seq = #{seq}

	</select>


	<update id="update" parameterType="hashMap">
		UPDATE board
		SET
		board_title=#{board_title},board_contents=#{board_contents},board_upd_date=
		now()
		WHERE board_seq=#{seq}
	</update>

	<delete id="deleteOne" parameterType="String">
		DELETE FROM board
		WHERE board_seq = #{seq}
	</delete>


</mapper>